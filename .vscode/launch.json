{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/Ghost.Console/bin/Debug/netcoreapp2.1/ghost.dll",
            "args": ["updateData-accountProducts"],
            "cwd": "${workspaceRoot}/Ghost.Console/bin/Debug/netcoreapp2.1/",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}